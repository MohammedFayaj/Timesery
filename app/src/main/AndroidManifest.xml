<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ln.designdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.uzumaki.timeser.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.uzumaki.timeser.SplshActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.uzumaki.timeser.AnimActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar">

        </activity>
        <activity android:name="com.example.uzumaki.timeser.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar">

        </activity>
    </application>

</manifest>